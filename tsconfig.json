{
  "include": [
    "data/**/*",
    "pages/**/*",
    "prisma/**/*",
    "next-env.d.ts",
    "components/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "$data/*": ["data/*"],
      "$prisma/*": ["prisma/*"],
      "$components/*": ["components/*"],
    },
    "noEmit": true,
    "allowJs": true,
    "strict": false,
    "jsx": "preserve",
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
  }
}
